{
  "name": "karanmelo-page",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "export": "next export",
    "test": "react-scripts test \".spec.ts(x)\" -o --watchAll=false",
    "test:watch": "react-scripts test \".spec.ts(x)\" -o --watch",
    "test:e2e": "react-scripts test \".spec.ts(x)\" -o --runInBand --testTimeout=10000",
    "test:cov": "react-scripts test -u --ci --silent --coverage --runInBand --watchAll --testResultsProcessor jest-sonar-reporter",
    "test:ci": "CI=true react-scripts test \".spec.tsx\" -u --silent --verbose --passWithNoTests",
    "sonar": "node sonar-project.js",
    "eject": "react-scripts eject",
    "lint": "tsc --noEmit && eslint --fix --ext ts,tsx .",
    "fix": "yarn lint --fix"
  },
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "html-webpack-plugin": "^5.5.1",
    "next": "^13.4.3",
    "next-offline": "^5.0.5",
    "next-pwa": "^5.6.0",
    "react": "^18.2.0",
    "react-circular-progressbar": "^2.0.4",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.3.0",
    "sharp": "^0.32.1",
    "styled-components": "^5.3.0",
    "typescript": "^5.0.4",
    "web-vitals": "^1.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/node": "^7.17.10",
    "@eslint/create-config": "^0.2.0",
    "@types/jest": "^27.5.0",
    "@types/node": "^17.0.31",
    "@types/react": "^17.0.38",
    "@types/react-dom": "^17.0.11",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel": "^6.23.0",
    "babel-plugin-styled-components": "^2.1.3",
    "eslint": "^8.15.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "jest": "^28.1.0",
    "jest-sonar-reporter": "^2.0.0",
    "prettier": "^2.6.2",
    "properties-reader": "^2.2.0",
    "react-test-renderer": "^18.1.0",
    "sonarqube-scanner": "^2.8.1",
    "ts-jest": "^28.0.2"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  },
  "jestSonar": {
    "reportPath": "coverage",
    "reportFile": "test-reporter.xml",
    "indent": 4
  }
}
